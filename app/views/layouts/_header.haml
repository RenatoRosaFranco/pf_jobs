%header
  %nav{class: 'navbar navbar-default'}
    .container{class: 'container-fluid'}
      .navbar-header
        %button{type: 'button', class: 'navbar-toggle collapsed', 'data-toggle': 'collapse', 'data-target': "#bs-example-navbar-collapse-1", 'aria-expanded': 'false'}
          %span{class: 'sr-only'} Toggle navigation
          %span{class: 'icon-bar'}
          %span{class: 'icon-bar'}
          %span{class: 'icon-bar'}

        = link_to 'Vagas', root_path, class: 'navbar-brand'

      .collapse{class: 'navbar-collapse', id: 'bs-example-navbar-collapse-1'}
        %ul{class: 'nav navbar-nav'}
          %li= link_to 'Vagas', jobs_path
          %li= link_to 'Empresas', companies_path
          %li= link_to 'Cursos', ''

        %ul{class: 'nav navbar-nav navbar-right'}
          - unless current_user
            %li= link_to 'Entrar', new_user_session_path
            %li= link_to 'Cadastrar', new_user_registration_path
          - else
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
            %li= link_to 'Minha Conta', dashboard_path