= provide :title, ''
= provide :description, ''
= provide :keywords, ''
= provide :ld_json, {}

%section{id: 'presenter', class: 'jumbotron'}
  .container
    .row
      .col-md-12
        .row
          .col-md-8{class: 'col-md-offset-2'}
            .panel{class: 'panel-default'}
              .panel-body
                = form_for(:company, { url: companies_path, method: :get }) do |f|

                  .col-md-4
                    = f.text_field :name, class: 'form-control',
                    placeholder: 'Nome da Empresa'

                  .col-md-4
                    = f.text_field :location, class: 'form-control',
                    placeholder: 'Local'

                  .col-md-4
                    = f.submit 'Buscar Empresas',
                    class: 'btn btn-primary btn-lg top'

%section{id: 'content'}
  .container
    .row
      .col-md-12

        .row{class: 'text-center'}
          %h3{class: 'bold'} #{User.all.count} Empresa(s)
          %br

        .row
          - User.all.each do |user|
            .col-md-4
              .panel{class: 'panel-default'}
                .panel-heading
                  .jumbotron
                .panel-body
                  %p{class: 'pull-left'}=link_to user.profile.name, company_path(user)
                  %p{class: 'pull-right bold'}
                    %a{href: '', class: 'bold'}
                      #{user.jobs.count} Vaga(s)

        .row
          .text-center
            = link_to 'Carregar Mais', companies_path, class: 'btn btn-primary btn-lg top'