= provide :title, ''
= provide :description, ''
= provide :keywords, ''
= provide :ld_json, {}

%section{id: 'content'}
  .container
    .row
      .col-md-12

        .row
          .col-md-7{class: 'col-md-offset-2'}
            .col-md-12
              = link_to 'Publicar uma Vaga', new_dashboard_job_path, class: 'btn btn-primary btn-lg pull-right'
              %h4{class: 'bold'} #{current_user.jobs.count} Vaga(s) Publicada(s)
              %hr

            .col-md-12


        .row
          .col-md-7{class: 'col-md-offset-2'}
            #jobs
              - current_user.jobs.limit(4).each do |job|
                .col-md-12
                  .panel{class: 'panel-default'}
                    .panel-body
                      .col-md-10
                        %h4{class: 'bold'}= link_to job.title, edit_dashboard_job_path(job)
                        %ul{class: 'list-unstyled list-inline'}
                          %li Vencido
                          %li #{format_date(job.created_at)} - #{format_date(job.expiration_date)}
                          %li #{job.modality} (#{job.state.name})
                        %ul{class: 'lust-unstyled list-inline'}
                          %li{class: 'bold'}
                            %i{class: 'far fa-eye'}
                            #{rand(0..5_000)} Visitas
                          %li{class: 'bold'}
                            %i{class: 'fas fa-users'}
                            #{rand(0..100)} Candidaturas

            #pagination
              .text-center
