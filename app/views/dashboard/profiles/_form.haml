= form_for([:dashboard, profile]) do |f|

  .col-md-12
    .field
      = f.label :logo, 'Logo'
      = f.file_field :logo
    %br

  .col-md-6
    .field
      = f.label :name, 'Nome'
      .input-group
        .input-group-addon
          %i{class: 'fas fa-building'}
        = f.text_field :name, class: 'form-control no-border-left', required: 'required',
        placeholder: 'Digite o nome', autocomplete: 'off'

  .col-md-6
    .field
      = f.label :phone, 'Telefone'
      .input-group
        .input-group-addon
          %i{class: 'fas fa-phone'}
        = f.phone_field :phone, class: 'form-control no-border-left', required: 'required',
      placeholder: 'Digite o telefone', autocomplete: 'off'

  .col-md-12
    .field
      = f.label :description, 'Descrição'
      .input-group
        .input-group-addon
          %i{class: 'far fa-address-card'}
        = f.text_area :description, class: 'form-control no-border-left', required: 'required',
        placeholder: 'Digite a descrição', autocomplete: 'off'

  .col-md-12
    .field
      = f.label :website, 'Website'
      .input-group
        .input-group-addon
          %i{class: 'fas fa-globe-americas'}
        = f.url_field :website, class: 'form-control no-border-left', required: 'required',
        placeholder: 'Digite o endereço'

  .col-md-6
    .field
      = f.label :state_id, 'Estado'
      .input-group
        .input-group-addon
          %i{class: 'fas fa-flag-usa'}
        = f.collection_select(:state_id, State.all, :id, :name,
        { prompt: 'Selecionar Estado' }, { class: 'form-control no-border-left', required: 'required' })

  .col-md-6
    .field
      = f.label :city_id, 'Cidade'
      .input-group
        .input-group-addon
          %i{class: 'fas fa-city'}
        = f.collection_select(:city_id, City.all, :id, :name,
        { prompt: 'Selecionar Cidade' }, { class: 'form-control no-border-left', required: 'required' })

  .col-md-12
    %br
    .actions
      = f.submit nil, class: 'btn btn-primary btn-lg top',
      style: 'background-color: #00315c; font-weight: bold;'